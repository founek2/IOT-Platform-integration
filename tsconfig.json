{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext.asynciterable",
            "DOM", // were problems with @testing-library
            "es6",
            "dom",
            "es2016",
            "es2019"
        ]
        // "paths": {
        //     "*": [
        //         "types/*.d.ts"
        //     ]
        // }
    },
    "exclude": ["src/**/*.spec.ts"],
    "include": ["src/**/*"]
